# Ghostty configuration

# Window
window-decoration = auto
macos-titlebar-style = hidden
window-padding-x = 1
window-padding-y = 1
link-url
mouse-hide-while-typing
macos-auto-secure-input
macos-secure-input-indication

# Make cursor a block outside of tmux
shell-integration-features = no-cursor

# Quit instance without confirmation
quit-after-last-window-closed = true
confirm-close-surface = false

# Font
font-family = MonoLisa Nerd Font
font-size = 12
font-thicken

# Scrollback
scrollback-limit = 20000

# Colors - One Dark theme
background = 1e2127
foreground = abb2bf

# Normal colors
palette = 0=#1e2127
palette = 1=#e06c75
palette = 2=#98c379
palette = 3=#d19a66
palette = 4=#61afef
palette = 5=#c678dd
palette = 6=#56b6c2
palette = 7=#828791

# Bright colors
