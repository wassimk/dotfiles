[github]
  user = wassimk

[core]
  excludesfile = ~/.gitignore
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  diff-so-fancy = true
  syntax-theme = OneHalfDark
  side-by-side = false
  line-numbers = false
  hyperlinks = true

[diff]
  colorMoved = default

[alias]
  br = branch -v
  st = status
  cl = clone
  pf = push --force-with-lease
  df = diff
  dfs = diff --staged
  cleanup = !git remote prune origin && git gc && git clean -df && git stash clear
  jump = "!f() { vcs-jump \"$@\"; }; f"
  lg1 = log --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold white)- %an%C(reset)' -30
  lg2 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all -30
  lg3 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all -30
  lg = !git lg1
  sl = shortlog --format=short
  sls = shortlog --numbered --format=short --summary
  sw = !git_sw
  ca = commit --amend
  car = commit --amend --no-edit
  unstage = reset
  unchange = checkout --
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}

[push]
  default = simple
  autoSetupRemote = true

[pull]
  rebase = true

[rebase]
  autosquash = true
  updateRefs = true

[fetch]
  prune = true

[commit]
  template = ~/.gitmessage
  gpgsign = true
  verbose = true

[init]
  defaultBranch = main

[merge]
  tool = codediff
  conflictstyle = diff3
  guitool = kaleidoscope

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "codediff"]
  cmd = nvim "$MERGED" -c "CodeDiff merge $MERGED"

[mergetool "kaleidoscope"]
  cmd = ksdiff --merge --output "$MERGED" --base "$BASE" -- "$LOCAL" --snapshot "$REMOTE" --snapshot
  trustExitCode = true

[difftool "kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path "$MERGED" -- "$LOCAL" "$REMOTE"

[color]
  ui = true

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[tag]
  forceSignAnnotated = true

[advice]
  detachedHead = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[blame]
	ignoreRevsFile = .git-blame-ignore-revs

[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
