[user]
  name = Wassim Metallaoui
  email = wassim@metallaoui.com

[github]
  user = wassimk

[core]
  excludesfile = ~/.gitignore
  editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
  br = branch
  st = status
  co = checkout
  cl = clone
  pf = push --force-with-lease
  df = diff --compaction-heuristic
  dfs = diff --staged --compaction-heuristic
  cleanup = !git remote prune origin && git gc && git clean -df && git stash clear
  lg1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -30
  lg2 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all -30
  lg3 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all -30
  lg = !git lg2
  ca = commit --amend
  car = commit --amend --no-edit
  unstage = reset
  unchange = checkout --
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}

[push]
  default = simple

[credential]
  helper = osxkeychain

[merge]
  ff = only
	tool = vimdiff
	conflictstyle = diff3

[fetch]
  prune = true

[commit]
  template = ~/.gitmessage

[init]
  templatedir = ~/.git_template

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[mergetool]
	prompt = false
