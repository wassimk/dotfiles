# Set personal aliases, overriding those provided by oh-my-zsh libs
# plugins, and themes. For a full list of active aliases, run `alias`.

# file / dir listing
if command -v exa 2>&1 >/dev/null; then
  alias ll='exa -lhg --group-directories-first --git --color=automatic'  # Pretty up the listing
  alias la='exa -lahg --group-directories-first --git --color=automatic' # Include dot files / folders
  alias lh='exa -lahdg --group-directories-first .*'                     # Show only dot files / folders
else
  # fallback to normal ls
  alias ll='ls -lF'
  alias la='ls -laF'
  alias lh='ls -ld .*'
fi

alias ls='ll'
alias l='ll'

if command -v bat 2>&1 >/dev/null; then
  alias cat='bat'
fi

# Logs
if command -v grc 2>&1 >/dev/null; then
  alias super_tail="grc tail -f ~/Code/*/log/development.log"
  alias super_tail_giving="grc tail -f ~/Code/{api,church-center,giving,people,accounts}/log/development.log"
fi

# Editor
alias v=$EDITOR
alias e="v"
if command -v nvim 2>&1 >/dev/null; then
  alias vim="nvim"
fi

# Source shell and edit zsh, vim and tmux aliases
alias sz='source ~/.zshrc'
alias ez='e ~/.zshrc'
alias eza='e ~/.zsh/aliases'
alias ezf='e ~/.zsh/functions'
alias ev='e ~/.config/nvim/init.lua'
alias et='e ~/.tmux.conf'
alias etm='e ~/.tmux.conf.osx'
alias etl='e ~/.tmux.conf.linux'

# tmux
alias tml='tmux ls -F "#{session_name}"'
alias tmka='tmux kill-server'

# bundler
alias bi='bundle install'
alias bu='bundle update'
alias be='bundle exec'

# copy/paste
case "$OSTYPE" in
  darwin*) alias clip="nc localhost 8377" ;;
  linux*)  alias clip="nc -N localhost 8377" ;;
esac
