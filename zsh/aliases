# Set personal aliases, overriding those provided by oh-my-zsh libs
# plugins, and themes. For a full list of active aliases, run `alias`.
alias ll='ls -lhF'      # Pretty listing
alias l='ll'            # Override oh-my-zsh default
alias lsl='ll'          # Because I keep typing it!
alias la='ls -lahF'     # Show all files
alias lsa='la'          # Override oh-my-zsh default
alias lh='ls -ldhF .*'  # Show dot files / folders
alias lsh='lh'          # Because I keep typing it!
alias rm='trash'        # Send to trash (brew install trash)
alias npm='yarn'        # Use yarn instead of npm (brew install yarn)

# Editor
alias v=$EDITOR
alias e=v

# Tmuxinator
# tmuxinator gem makes this alias but it's broken in rubygems
# https://github.com/rubygems/rubygems/issues/1577
alias mux=tmuxinator

# Edit and vim and zsh, source zs
alias sz='source ~/.zshrc'
alias ez='e ~/.zshrc'
alias eza='e ~/.zsh/aliases'
alias ezf='e ~/.zsh/functions'
alias ev='e ~/.vimrc'
alias et='e ~/.tmux.conf'
alias git='hub'

###
# tmux
###
alias tml='tmux list-sessions'
alias tmka='tmux kill-server'
