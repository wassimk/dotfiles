# Set personal aliases, overriding those provided by oh-my-zsh libs
# plugins, and themes. For a full list of active aliases, run `alias`.
alias ll='exa -lhg --group-directories-first --git --color=automatic'  # Pretty listing
alias l='ll'                                                           # Override oh-my-zsh default
alias la='exa -lahg --group-directories-first --git --color=automatic'
alias lsa='la'                                                         # Override oh-my-zsh default
alias lh='exa -lahdg --group-directories-first .*'                     # Show dot files / folders

# Logs
alias super_tail="grc tail -f ~/Code/*/log/development.log"
alias super_tail_giving="grc tail -f ~/Code/{api,church-center,giving,people,accounts}/log/development.log"

# Editor
alias v=$EDITOR
alias e=v
alias vim="nvim"

# Edit and vim and zsh, source zs
alias sz='source ~/.zshrc'
alias ez='e ~/.zshrc'
alias eza='e ~/.zsh/aliases'
alias ezf='e ~/.zsh/functions'
alias ev='e ~/.vimrc'
alias et='e ~/.tmux.conf'

###
# tmux
###
alias tml='tmux list-sessions'
alias tmka='tmux kill-server'

# copy/paste
case "$OSTYPE" in
  darwin*)  alias clip="nc localhost 8377" ;;
  linux*)  alias clip="nc -N localhost 8377" ;;
esac
